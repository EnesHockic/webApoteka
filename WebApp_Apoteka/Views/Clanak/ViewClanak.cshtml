@model WebApp_Apoteka.ViewModels.Clanak.ViewClanakVM
@inject SignInManager<AppUser> signInManager

@{
    Layout = "DefaultLayout";
    var imagePath = "~/ClanakImages/" + (Model.Slika ?? "error.png");

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Clanak</title>
    <style>

        h1 {
            text-align: center;
            font-weight: 700;
            font-family: "Roboto", sans-serif;
            font-size: 1.7em;
            line-height: 1.3;
            color: #555;
            width: 100%;
            margin-bottom: .3em;
        }

        .entry-meta {
            text-align: center;
        }

        img {
        }

        #UrediClanak {
            float: right;
            top: 20px;
            padding: 10px;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div style="padding-top: 40px;">
        @*<img src="~/ClanakImages/img_7aa7832a-48a1-4edd-b9b1-5b9ffad394ec.jpg" />*@
        @if (User.IsInRole("Admin")||User.IsInRole("Apotekar"))
        {
            <a class="btn-info" asp-action="ObjaviClanak" id="UrediClanak" asp-route-Id=@Model.ID>Uredi</a>

        }
        <h1>@Model.Naslov</h1><br />
        <div class="entry-meta uppercase is-xsmall">
            <span style="text-align:center; margin-bottom:40px;">OBJAVLJENO <time>@Model.DatumObjave</time></span>
        </div>
        <div style="text-align:center;">
            <img style="height:500px; width:auto;" src="@imagePath" asp-append-version="true" />
        </div>
        <div style="padding:20px;">
            @Html.Raw(Model.Sadrzaj)
        </div>

    </div>
</body>
</html>
@model WebApp_Apoteka.ViewModels.Account.UporediKodZaKonfirmacijuTelefonaVM
@{
    Layout = "DefaultLayout";
    ViewData["Title"] = "PotvrdaKoda";
}
<style>
    h3 {
        text-align: center;
        font-weight: 700;
        font-family: "Roboto", sans-serif;
        font-size: 1.7em;
        line-height: 1.3;
        color: #555;
        width: 100%;
        margin-bottom: .3em;
    }

    body {
        text-align: center;
    }

    .form-control {
        width: auto;
        display: inline-block;
    }

    .btn {
        margin-top: 10px;
    }
</style>
<div>
    <h3>Poslan vam je 6-cifreni broj, potvrdite</h3><br />

    <form method="post" class="forma" asp-action="ProvjeriKod">
        <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="@Model.GenerisaniKod" hidden />
            <input asp-for="@Model.Operacija" hidden />
            <input asp-for="@Model.userName" hidden />
            <label>Unesite kod: </label><br />
            <input class="form-control" asp-for="@Model.KorisnikovKod"><br />

            <button type="submit" class="btn btn-primary">Potvrdi</button>
    </form>
</div>

